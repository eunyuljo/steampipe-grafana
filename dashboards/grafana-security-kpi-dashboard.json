          "rawSql": "SELECT \n  '네트워크 보안' as 보안영역,\n  ROUND(\n    COUNT(CASE WHEN public_ip_address IS NULL THEN 1 END) * 100.0 / \n    NULLIF(COUNT(*), 0), 2\n  ) as 점수,\n  COUNT(*) as 총리소스,\n  COUNT(CASE WHEN public_ip_address IS NULL THEN 1 END) as 양호,\n  COUNT(CASE WHEN public_ip_address IS NOT NULL THEN 1 END) as 위험\nFROM aws_ec2_instance\nUNION ALL\nSELECT \n  'S3 데이터 보호' as 보안영역,\n  ROUND(\n    COUNT(CASE WHEN versioning_enabled = true AND block_public_acls = true THEN 1 END) * 100.0 / \n    NULLIF(COUNT(*), 0), 2\n  ) as 점수,\n  COUNT(*) as 총리소스,\n  COUNT(CASE WHEN versioning_enabled = true AND block_public_acls = true THEN 1 END) as 양호,\n  COUNT(CASE WHEN versioning_enabled = false OR block_public_acls = false THEN 1 END) as 위험\nFROM aws_s3_bucket\nUNION ALL\nSELECT \n  'IAM 계정 관리' as 보안영역,\n  ROUND(\n    COUNT(CASE WHEN password_last_used >= NOW() - INTERVAL '90 days' OR password_last_used IS NULL THEN 1 END) * 100.0 / \n    NULLIF(COUNT(*), 0), 2\n  ) as 점수,\n  COUNT(*) as 총리소스,\n  COUNT(CASE WHEN password_last_used >= NOW() - INTERVAL '90 days' OR password_last_used IS NULL THEN 1 END) as 양호,\n  COUNT(CASE WHEN password_last_used < NOW() - INTERVAL '90 days' THEN 1 END) as 위험\nFROM aws_iam_user\nORDER BY 점수 ASC",
          "refId": "A"
        }
      ],
